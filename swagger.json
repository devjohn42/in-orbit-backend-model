{
  "openapi": "3.0.3",
  "info": {
    "title": "In Orbit",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/goals": {
      "post": {
        "tags": [
          "goals"
        ],
        "description": "Create a goal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "desiredWeeklyFrequency": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 7
                  }
                },
                "required": [
                  "title",
                  "desiredWeeklyFrequency"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "nullable": true,
                  "enum": [
                    null
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/goal-completions": {
      "post": {
        "tags": [
          "goals"
        ],
        "description": "Complete a goal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "goalId": {
                    "type": "string"
                  }
                },
                "required": [
                  "goalId"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "nullable": true,
                  "enum": [
                    null
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/pending-goals": {
      "get": {
        "tags": [
          "goals"
        ],
        "description": "Get pending goals",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pendingGoals": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          },
                          "desiredWeeklyFrequency": {
                            "type": "number"
                          },
                          "completionCount": {
                            "type": "number"
                          }
                        },
                        "required": [
                          "id",
                          "title",
                          "desiredWeeklyFrequency",
                          "completionCount"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "pendingGoals"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/summary": {
      "get": {
        "tags": [
          "goals"
        ],
        "description": "Get week summary",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "object",
                      "properties": {
                        "completed": {
                          "type": "number"
                        },
                        "total": {
                          "type": "number"
                        },
                        "goalsPerDay": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "title": {
                                  "type": "string"
                                },
                                "completedAt": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "id",
                                "title",
                                "completedAt"
                              ],
                              "additionalProperties": false
                            }
                          }
                        }
                      },
                      "required": [
                        "completed",
                        "total",
                        "goalsPerDay"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "summary"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/auth/github": {
      "post": {
        "tags": [
          "auth"
        ],
        "description": "Authenticate user from Github code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  }
                },
                "required": [
                  "code"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "token"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/profile": {
      "get": {
        "tags": [
          "auth"
        ],
        "description": "Get authenticated user profile",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "profile": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "nullable": true,
                          "type": "string"
                        },
                        "email": {
                          "nullable": true,
                          "type": "string",
                          "format": "email",
                          "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                        },
                        "avatarUrl": {
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "email",
                        "avatarUrl"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "profile"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}